<div class="pull-right">
  <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-default") %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <td>  # </td>

      <td> 品名</td>
      <td> 描述</td>
      <td> 库存</td>
      <td> 价格</td>
      <td> 选项 </td>
      <td>上架时间</td>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
    <td> <%= product.id %> </td>

    <td>  <%= link_to(product.title, admin_product_path(product)) %>  </td>

    <td> <%= product.description %>
    <td><%= product.quantity %> </td>
    <td> <%= product.price %> </td>
    <td>
      <%= link_to('Edit', edit_admin_product_path(product))%>|
      <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you shure?"}) %>
    </td>
    <td>  <%= product.created_at %>  </td>
    <% end %>
  </tr>
</tbody>
</table>
