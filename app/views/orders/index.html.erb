<div class="row">
  <div class="col-md-12">

    <h2> 全部订单</h2>

      <div class="row well">
        <table class="table table-bordered">
          <thead>
            <tr>

              <th>
               商品信息
              </th>
              <th>  总价 </th>
              <th>  订单状态  </th>

              <th>  编辑操作  </th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
            <tr>

              <td>
                <% order.product_lists.each do |product_list| %>
                   <%= product_list.product_name %>;
                <% end %>
              </td>
              <td> <%= order.total  %></td>
              <td> <%= order.aasm_state %> </td>

              <td>
                <%= link_to("取消订单", cancell_order_order_path(order), method: :post, :class => "btn btn-primary ", style: "margin-left:20px") %>
                <%= link_to("出货", ship_order_path(order), method: :post, :class => "btn btn-danger ") %>
              </td>
            </tr>
            <% end %>
          </tbody>


        </table>
      </div>

  </div>
  </div>
